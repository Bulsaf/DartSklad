<Window
	x:Class="DartSklad.StorageObjectsWindow"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:DartSklad;assembly=DartSklad"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="StorageObjectsWindow"
	d:DesignHeight="450"
	d:DesignWidth="800"
	Background="#181818"
	Foreground="White"
	mc:Ignorable="d">
	<Window.Styles>
		<Style Selector="TextBlock">
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="FontSize" Value="14" />
			<Setter Property="Margin" Value="5" />
			<Setter Property="Foreground" Value="White" />
		</Style>
		<Style Selector="local|AllObjectsPanelControl">
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="Margin" Value="10" />
			<Setter Property="CornerRadius" Value="10" />
			<Setter Property="Width" Value="250" />
			<Setter Property="BorderBrush" Value="Red" />
			<Setter Property="BorderThickness" Value="2" />
		</Style>
		<Style Selector="Button">
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="Background" Value="Black" />
			<Setter Property="Foreground" Value="White" />
			<Setter Property="CornerRadius" Value="8" />
			<Setter Property="BorderBrush" Value="Red" />
			<Setter Property="BorderThickness" Value="2" />
			<Setter Property="Margin" Value="8" />
			<Setter Property="Padding" Value="15,8" />
			<Setter Property="FontSize" Value="14" />
			<Setter Property="HorizontalContentAlignment" Value="Center" />
		</Style>
	</Window.Styles>
	<DockPanel>
		<Label
			Margin="20"
			Content="Склад"
			DockPanel.Dock="Top"
			FontSize="22"
			FontWeight="Bold" />
		<StackPanel
			Margin="15"
			DockPanel.Dock="Top"
			Orientation="Horizontal">
			<StackPanel Margin="10,0" Orientation="Horizontal">
				<TextBlock x:Name="StorageTitleText" Text="{Binding StorageTitle}" />
			</StackPanel>
		</StackPanel>
		<StackPanel
			Margin="15"
			DockPanel.Dock="Top"
			Orientation="Horizontal">
			<Button Click="AddButton_Click" Content="Добавить объект" />
			<Button Click="BackButton_Click" Content="Назад" />
		</StackPanel>
		<Label
			HorizontalAlignment="Center"
			Content="Объекты"
			DockPanel.Dock="Top"
			FontSize="20" />
		<ScrollViewer>
			<WrapPanel
				x:Name="ObjectsWrapPanel"
				Margin="20"
				DockPanel.Dock="Top">
				<!--  Объекты будут добавляться динамически  -->
			</WrapPanel>
		</ScrollViewer>
	</DockPanel>
</Window>
