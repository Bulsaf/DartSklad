<Window
	x:Class="DartSklad.AllObjectsWindow"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:DartSklad;assembly=DartSklad"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="AllObjectsWindow"
	d:DesignHeight="450"
	d:DesignWidth="800"
	Background="#181818"
	Foreground="LightGray"
	WindowStartupLocation="CenterScreen"
	mc:Ignorable="d">
	<Window.Styles>
		<Style Selector="TextBox">
			<Setter Property="Width" Value="360" />
			<Setter Property="FontSize" Value="14" />
			<Setter Property="Height" Value="35" />
			<Setter Property="Margin" Value="0,5,0,10" />
			<Setter Property="VerticalContentAlignment" Value="Center" />
			<Setter Property="Padding" Value="10,0" />
			<Setter Property="Background" Value="#222222" />
			<Setter Property="Foreground" Value="White" />
		</Style>

		<Style Selector="TextBlock">
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="FontSize" Value="14" />
			<Setter Property="Margin" Value="5" />
			<Setter Property="Foreground" Value="LightGray" />
		</Style>
		<Style Selector="local|AllObjectsPanelControl">
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="Margin" Value="10" />
			<Setter Property="CornerRadius" Value="10" />
			<Setter Property="Width" Value="250" />
			<Setter Property="BorderBrush" Value="Red" />
			<Setter Property="BorderThickness" Value="2" />
		</Style>
		<Style Selector="Button">
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="Background" Value="Black" />
			<Setter Property="Foreground" Value="White" />
			<Setter Property="CornerRadius" Value="8" />
			<Setter Property="BorderBrush" Value="Red" />
			<Setter Property="BorderThickness" Value="2" />
			<Setter Property="Margin" Value="8" />
			<Setter Property="Padding" Value="15,8" />
			<Setter Property="FontSize" Value="14" />
		</Style>

	</Window.Styles>

	<DockPanel>
		<Label
			Margin="20"
			Content="Все объекты"
			DockPanel.Dock="Top"
			FontSize="18" />
		<StackPanel
			Margin="10"
			DockPanel.Dock="Top"
			Orientation="Horizontal">
			<Button Click="CreateObjectButton_Click" Content="Создать объект" />
			<Button Click="BackButton_Click" Content="Назад" />
		</StackPanel>
		<ScrollViewer>
			<WrapPanel
				Name="ObjectsWrapPanel"
				Margin="20"
				DockPanel.Dock="Top" />
		</ScrollViewer>
	</DockPanel>
</Window>
