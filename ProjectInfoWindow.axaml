<Window
	x:Class="DartSklad.ProjectInfoWindow"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:DartSklad"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="ProjectInfoWindow"
	d:DesignHeight="450"
	d:DesignWidth="800"
	Background="#181818"
	Foreground="LightGray"
	WindowStartupLocation="CenterScreen"
	mc:Ignorable="d">
	<Window.Styles>
		<Style Selector="TextBox">
			<Setter Property="Width" Value="250" />
			<Setter Property="FontSize" Value="14" />
			<Setter Property="Height" Value="35" />
			<Setter Property="Margin" Value="0,5,0,10" />
			<Setter Property="VerticalContentAlignment" Value="Center" />
			<Setter Property="Padding" Value="10,0" />
			<Setter Property="Background" Value="#222222" />
			<Setter Property="Foreground" Value="White" />
		</Style>

		<Style Selector="TextBlock">
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="FontSize" Value="14" />
			<Setter Property="Margin" Value="5" />
			<Setter Property="Foreground" Value="LightGray" />
		</Style>
		<Style Selector="local|EventCardControl">
			<Setter Property="VerticalAlignment" Value="Center" />

			<Setter Property="CornerRadius" Value="10" />
			<Setter Property="Width" Value="200" />
		</Style>
		<Style Selector="Button">
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="Background" Value="Black" />
			<Setter Property="Foreground" Value="White" />
			<Setter Property="CornerRadius" Value="8" />
			<Setter Property="BorderBrush" Value="Red" />
			<Setter Property="BorderThickness" Value="2" />
			<Setter Property="Margin" Value="8" />
			<Setter Property="Padding" Value="15,8" />
			<Setter Property="FontSize" Value="14" />
			<Setter Property="HorizontalContentAlignment" Value="Center" />
		</Style>

		<Style Selector="Button.uc">
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="HorizontalAlignment" Value="Center" />
			<Setter Property="Background" Value="Black" />
			<Setter Property="Foreground" Value="White" />
			<Setter Property="CornerRadius" Value="10" />
			<Setter Property="Margin" Value="10" />
			<Setter Property="BorderBrush" Value="Red" />
			<Setter Property="BorderThickness" Value="2" />
		</Style>
	</Window.Styles>

	<DockPanel>
		<Label
			Margin="20"
			Content="Проект"
			DockPanel.Dock="Top"
			FontSize="22"
			FontWeight="Bold" />
		<StackPanel
			Margin="15"
			DockPanel.Dock="Top"
			Orientation="Horizontal">
			<StackPanel Margin="10,0" Orientation="Horizontal">
				<TextBlock x:Name="projTitleText" Text="" />
			</StackPanel>
			<StackPanel Margin="10,0" Orientation="Horizontal">
				<TextBlock x:Name="beginDateText" Text="" />
			</StackPanel>
			<StackPanel Margin="10,0" Orientation="Horizontal">
				<TextBlock x:Name="endDateText" Text="" />
			</StackPanel>
		</StackPanel>
		<StackPanel
			Margin="15"
			DockPanel.Dock="Top"
			Orientation="Horizontal">
			<Button Click="AddButton_Click" Content="Создать мероприятие" />
			<Button Click="BackButton_Click" Content="Назад" />
		</StackPanel>
		<Label
			HorizontalAlignment="Center"
			Content="Мероприятия"
			DockPanel.Dock="Top"
			FontSize="20" />
		<ScrollViewer>



			<WrapPanel
				x:Name="EventsWrapPanel"
				Margin="20"
				DockPanel.Dock="Top" />


		</ScrollViewer>
	</DockPanel>
</Window>
